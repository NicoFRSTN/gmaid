
<div class='container'>

  <h1 class="text-center text-white m-3">Advertisement</h1>

<% @messages.each do |message| %>
  <div class='mail-card mx-auto'>

    <div class='row d-flex p-3 justify-content-around'>

      <div class='col-2 my-auto big-checkbox'>
        <input type="checkbox" id="mail_checkbox" name="check">
      </div>

      <div class='col-4 my-auto'>
        <h4><%= message.sender_email %></h4>
        <div class='label-box d-flex mx-auto'>
            <% message.labels.each do |label| %>
              <div class='label'><%= label.name %></div>
            <% end %>
        </div>
      </div>

      <div class="col-4 my-auto">
        <h5><strong>Subject: <%= message.object %></strong></h5>
        <h5><%= message.content %>.. <br><strong><%= link_to "see more", message_path(message), class: "text-decoration-none m-1" %></strong></h5>
      </div>

      <div class="col-2 my-auto">
        <h5><strong>Received on: </strong><br><%= message.received_at %></h5>
      </div>

    </div>
  </div>
<% end %>
