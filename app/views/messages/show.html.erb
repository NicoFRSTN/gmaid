<h1>Voici un message</h1>



<div class="card" style="width: 18rem;">
  <div class="card-body">
    <p><%= @message.sender_email %></p>
    <p><%= @message.content %></p>

    <div>
    <%= simple_form_for [@message, @label] do |f| %>
      <%= f.input :name %>
      <%= f.button :submit %>
      <% end %>

      <% @message.labels.each do |label| %>
        <div class="block">
          <p>
            <%= label.name %>
            <%= link_to "edit", edit_message_label_path(@message, label), class: "btn btn-info" %>
            <%= link_to "delete", label_path(label), class: "btn btn-danger", method: :delete %>
          </p>
        </div>
      <% end %>






    </div>
  </div>
</div>
